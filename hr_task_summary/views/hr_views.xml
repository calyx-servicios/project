<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="task_summary" model="ir.ui.view">
        <field name="name">project.task.tree</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="planned_hours" widget="float_time" sum="Spent Hours"/>
                <field name="effective_hours" widget="float_time" sum="Spent Hours"/>
                <field name="remaining_hours" widget="float_time" sum="Spent Hours"/>
            </tree>
        </field>
    </record>

    <record id="action_task_summary" model="ir.actions.act_window">
        <field name="res_model">project.task</field>
        <field name="name">Task Summary</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="task_summary"/>
        <field name="domain">[('project_id', '!=', False)]</field>
        <field name="context">{"default_project_id": active_id, "search_default_project_id": [active_id]}</field>
    </record>

    <record id="action_account_analysis" model="ir.actions.act_window">
        <field name="res_model">account.analytic.line</field>
        <field name="name">Project Analysis</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="analytic.view_account_analytic_line_tree"/>
        <field name="context">{'search_default_group_date': 1, 'default_account_id': active_id}</field>
        <field name="domain">[('account_id','=', active_id)]</field>
    </record>

    <record id="edit_project" model="ir.ui.view">
        <field name="name">hr.employee.form.timesheet</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='toggle_active']" position="before">
                <button class="oe_stat_button" type="action" name="%(action_task_summary)d" icon="fa-bar-chart-o">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Task Summary</span>
                    </div>
                </button>
                <button class="oe_stat_button" type="action" name="%(action_account_analysis)d" icon="fa-dollar">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Account Analysis</span>
                    </div>
                </button>
            </xpath>

        </field>
    </record>
    </data>
</odoo>
